
default nugetPath='.nuget/nuget.exe'

default workingdir='${Directory.GetCurrentDirectory()}'
default apiKey='${Environment.GetEnvironmentVariable("APIKEY")}'
default extra=''

var commandline='push "${nupkgFile}"'
set commandline='${commandline} -ApiKey ${apiKey}' if='!string.IsNullOrEmpty(apiKey)'
set commandline='${commandline} ${extra}' if='!string.IsNullOrEmpty(extra)'

exec program="${nugetPath}"
